<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/lg"
    android:paddingBottom="@dimen/lg"
    android:paddingStart="@dimen/lg"
    android:paddingEnd="@dimen/lg"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_check"
        android:layout_width="@dimen/xl"
        android:layout_height="@dimen/xl"
        android:scaleType="fitCenter"
        android:layout_gravity="end|center_vertical"
        app:srcCompat="@drawable/ic_check_icon"
        android:visibility="gone"
        />

    <ir.alizadeh.mmui.tv.MyTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/msv_text_color_default"
        android:textSize="@dimen/text_xxl"
        android:layout_gravity="start|center_vertical"
        android:gravity="start|center_vertical"
        android:layout_marginEnd="@dimen/xl"
        android:alpha="0.8"
        app:mytv_isBold="true"
        />

</FrameLayout>